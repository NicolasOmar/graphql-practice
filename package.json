  "homepage": "https://github.com/NicolasOmar/graphql-practice#readme",
  "scripts": {
    "setup-all": "npm i && npm run setup-exercises && npm run setup-poc",
    "setup-exercises": "cd ./1-exercises && npm i",
    "setup-poc": "npm run setup-poc-server && npm run setup-poc-client",
    "setup-poc-server": "cd ./2-poc/server && npm i",
    "setup-poc-client": "cd ./2-poc/client && npm i",
    "start-poc-server": "cd ./2-poc/server && npm start",
    "start-poc-client": "cd ./2-poc/client && npm start",
    "update-version": "node scripts/update-version.js"
  },
  "devDependencies": {
    "husky": "^4.3.8",
    "prompts": "^2.4.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run update-version"
    }
  }
